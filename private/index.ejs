<!DOCTYPE html>
<html lang="FR">

<head>
  <meta charset="utf-8">
  <title>Projet prepa</title>
  <link rel="stylesheet" href="style.css">
  <link rel="shortcut icon" href="images/logo.icon">

  <header>
    <a href="/">
      <img class="logo" src="images/logo.png" alt="FML-Logo">
    </a>

    <h1 class="title"><a href="/" id="title_link">FixMyLouv</a></h1>

    <input class="button_header" type="button" value=<%=user %> id="connexion" onclick="location.href='/login';">

    <div class="search">
      <form action="/" method="get">
        <input type="text" placeholder="Recherche" id="input_search" name="looking_for" required>

        <button id="button_search" type="submit" name="btn_search" value="searching">ðŸ”Ž</button>
      </form>
    </div>

  </header>

<body class='<%=mode %>'>
  <div id="header"></div>
  <hr>

  <main>
    <a class="textes" href="/accident">Signaler un accident</a>
    <div class="date">
      <h3>Date actuelle:</h3>
      <h3>
        <div id="current_day">
          <%=date %>
        </div>
      </h3>
    </div>
    <br>
    <br>
    <br>
    <br>

    <table align="center">
      <tr>
        <th class='<%=mode %>'>Description</th>
        <th class='<%=mode %>'>Adresse</th>
        <th class='<%=mode %>'>Rapporter part</th>
        <th class='<%=mode %>'>Date</th>
      </tr>
      <% accidentsInfoList.forEach(function(accident){ %>
        <tr>
          <td class='<%=mode %>'>
            <%= accident.description %>
          </td>
          <td class='<%=mode %>'>
            <%= accident.location %>
          </td>
          <td class='<%=mode %>'>
            <%= accident.user %>
          </td>
          <td class='<%=mode %>'>
            <%= accident.date %>
          </td>
        </tr>
        <% }) %>
    </table>

  </main>
  <footer></footer>
</body>

</html>